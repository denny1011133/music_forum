<h1>分類列表</h1>
<a href='/admin/AllAlbums' style="font-size:larger">Albums </a>|
<a href='/admin/categories' style="font-size:larger">Categories </a>|
<a href="/admin/users" style="font-size:larger">Users</a>
<br />
<br />
<br />
<div class="d-flex align-items-center p-3 my-3 text-white-50 bg-purple rounded shadow-sm">
  {{#if category}}
  <form action="/admin/categories/{{category.id}}?_method=PUT" method="POST">
    <input type="text" placeholder="name" name="name" value="{{category.name}}">
    <button type="submit">Update</button>
    <a href="/admin/categories">or Create New</a>
  </form>
  {{else}}
  <form action="/admin/categories" method="POST">
    <input type="text" placeholder="name" name="name">
    <button type="submit">Submit</button>
  </form>
  {{/if}}
</div>
<br />
<br />
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col" style="font-size:larger">List</th>
      <th scope="col" style="font-size:larger">Category Name</th>
      <th scope="col"></th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row" style="font-size:larger">{{this.id}}</th>
      <td style="font-size:larger">{{this.name}}</td>
      <td>
        <button type="button" class="btn btn-link" style="font-size:larger">
          <a href="/admin/categories/{{this.id}}">
            <i class="fas fa-edit"></i>
          </a>
        </button>
        <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-link" style="font-size:larger"><i class="fas fa-trash-alt"></i>
          </button>
        </form>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
